{
    int i;
    int n;

    i = 0;
    n = 0;

    while (i< 100) {
        if (i%4 == 0) {
               n = n/1;
        }

        if (i%4 == 1) {
               n = n*1;
        }

        if (i%4 == 2) {
               n = n+1;
        }

        if (i%4 == 3) {
               n = n+1;
        }

        i = i+1;
    }

    println(n); // expect 50
}